<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/Student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Enter ID"
        android:inputType="number"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/Student_FName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="First Name"
        android:inputType="textCapSentences"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/Student_LName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Last Name"
        android:inputType="textCapSentences"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/Student_Marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Marks"
        android:inputType="number"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/select_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Course :"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <ListView
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:choiceMode="singleChoice"
        android:listSelector="@color/colorAccent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit :"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <RadioGroup
            android:id="@+id/rdgrp_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/rdbtn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="2"/>

            <RadioButton
                android:id="@+id/rdbtn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="3"/>

            <RadioButton
                android:id="@+id/rdbtn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="4"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_add_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Add Data"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Button
            android:id="@+id/btn_view_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="View Data"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_delete_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Delete Data"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Button
            android:id="@+id/btn_update_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Update Data"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_search_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by ID"
        android:background="@color/colorAccent"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <Button
        android:id="@+id/btn_search_prog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by Prog Code"
        android:background="@color/colorAccent"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</LinearLayout>